---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"blog">["data"];

let { title, description, pubDate, updatedDate } = Astro.props;

if (!title) {
  ({ title, description, pubDate, updatedDate } = Astro.props.frontmatter);
}
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="dark:bg-primary-900 dark:text-primary-50">
    <Header />
    <main>
      <article>
        <div class="bg-primary-200 border-b-black border-b-2 space-y-4">
          <div class="container mx-auto py-16 px-10">
            <p class="text-2xl">{title}</p>
          </div>
        </div>

        <div class="container mx-auto mt-5 py-4 px-10">
          {
            pubDate && (
              <time class="font-thin">
                {typeof pubDate === "string"
                  ? pubDate
                  : pubDate.toLocaleDateString("en-us", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
              </time>
            )
          }
          {
            updatedDate && (
              <div class="font-light">
                Last updated on{" "}
                <time>
                  {typeof updatedDate === "string"
                    ? updatedDate
                    : updatedDate.toLocaleDateString("en-us", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                      })}
                </time>
              </div>
            )
          }
          <div class="prose dark:prose-invert">
            <slot />
          </div>
        </div>
      </article>
    </main>
  </body>
</html>
