---
/**
 * This Layout is used for rendering posts from the `blog` collection
 */
import type { CollectionEntry } from "astro:content";
import PostLayout from "../components/PostLayout/index.astro";

type Props = CollectionEntry<"blog">["data"] & {
  og?: string;
}

const { title, description, pubDate, updatedDate, toc, ogImage } = Astro.props;
---

<PostLayout {...{title, description, pubDate, updatedDate, toc, ogImage}}>
  <slot />
</PostLayout>
