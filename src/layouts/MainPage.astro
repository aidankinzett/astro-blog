---
/**
 * This Layout is used for rendering markdown files in the `/pages` directory
 */
import type { CollectionEntry } from "astro:content";
import PostLayout from "../components/PostLayout/index.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate } = Astro.props.frontmatter;
---

<PostLayout {...{title, description, pubDate, updatedDate}}>
  <slot />
</PostLayout>
