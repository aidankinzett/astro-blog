---
import BaseHead from "../components/BaseHead.astro";
import BaseLayout from "../components/BaseLayout.astro";
import HomePageText from "../components/HomePageText.astro";
import { SITE_DESCRIPTION,SITE_TITLE } from "../consts";
---

<BaseLayout>
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} slot="head" />

  <div class="space-y-5">
    <HomePageText>
      <span slot="small">Hello, I'm</span>
      <span slot="big">Aidan Kinzett 👋</span>
    </HomePageText>
    <HomePageText>
      <span slot="small">I work as a</span>
      <span slot="big">Tech Lead 👨‍💻</span>
    </HomePageText>
    <HomePageText>
      <span slot="small">at</span>
      <span slot="big"
        ><a href="https://labrys.io" class="underline-offset-4 underline"
          >Labrys</a
        > 🏢</span
      >
    </HomePageText>
  </div>
</BaseLayout>
